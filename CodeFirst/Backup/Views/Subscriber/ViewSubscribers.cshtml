@model PagedList.IPagedList<CodeFirst.Models.Subscriber>
@using PagedList.Mvc;

@{
    if (Model.Count != 0)
    {
        ViewBag.id = Model[0].ListID;
    }
}
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-10">
            <h1 class="page-header">View Subscriber</h1>
        </div>
        <div class="col-lg-2">
            @Html.ActionLink("List", "Index", "List", new { @class = "btn btn-sm btn-primary" })
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Subscribers to list
                </div>

                <!-- /.panel-heading -->
                <div class="panel-body">
                    @if (Model.Count != 0)
                    {

                        @Html.ValidationMessage("present", new { @class = "text-danger" })
                        <div class="dataTable_wrapper">
                            @*<table class="table  table-hover">*@
                            <table class="table table-striped table-bordered table-hover" id="dataTables-subscriber">

                                <thead>
                                    <tr>
                                        <th>First Name</th>
                                        <th>Last Name</th>
                                        <th>Email</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model)
                                    {
                                        @*@Html.HiddenFor(model => item.ListID)*@

                                        <tr class="odd gradeX">
                                            <td>
                                                @Html.DisplayFor(modelitem => item.FirstName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelitem => item.LastName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelitem => item.EmailAddress)
                                            </td>
                                            <td>
                                                @Html.ActionLink("Edit", "EditSusbscriber", new { id = item.SubscriberID })
                                            </td>
                                            <td>
                                                @Html.ActionLink("Delete From List", "DeleteSusbscriber", new { id = item.SubscriberID }, new { onclick = "return confirm('Are you sure you wish to Delte Subscriber?');" })
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                            <p>
                                @Html.PagedListPager(Model, Page => Url.Action("ViewSubscribers", new { Page = Page }), PagedListRenderOptions.PageNumbersOnly)
                            </p>
                            @*<nav>
                                    <ul class="pager" style="position: none;">
                                        <input type="text" class="pagedisplay" />
                                        <li><a href="#">Previous</a></li>
                                        <li><a href="#">Next</a></li>
                                    </ul>
                                </nav>*@
                        </div>

                    }


                    else {

                        <p>No subscribers in list</p><br />
                        @Html.ActionLink("Add New Subscriber", "AddSubcriber", new { id = @ViewBag.ListID })<p>OR</p>@Html.ActionLink("Import Subscriber", "ImportSubcriber", new { id = @ViewBag.ListID })

                    }
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    @Html.ActionLink("Back", "Index", "List", null, new { @class = "btn btn-primary" })
</div>
<!-- /#page-wrapper -->
<head>
    @*<script src="~/Content/jquery-1.4.4.min.js"></script>*@
    @*<script language="JavaScript" src="~/Content/jquery.tablesorter.js"></script>
        <script language="JavaScript" src="~/Content/jquery.tablesorter.pager.js"></script>
        <script type="text/javascript">
                $("table.tablesorter").tablesorter({ widthFixed: true, sortList: [[0, 0]] })
                .tablesorterPager({ container: $("#pager"), size: $(".pagesize option:selected").val() });
        </script>*@
    <script type="text/javascript">
        $('#dataTables-subscriber').DataTable({
            responsive: true
    });
    </script>
</head>
