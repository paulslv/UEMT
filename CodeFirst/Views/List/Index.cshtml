@model CodeFirst.ViewModels.ListViewModel
@{
    int i = 0;
}
<body>

    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-10">
                <h1 class="page-header">Lists</h1>
            </div>
            <div class="col-lg-2 pull-left">
                @*<a href="/List/NewList">  <button type="button" class="btn btn-primary page-header">New List</button></a>*@
                @Html.ActionLink("New List", "NewList", "List", new { @class = "btn btn-primary page-header" })
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Created Lists
                    </div>
                    <!-- /.panel-heading -->
                    <div class="panel-body">
                        @if (Model != null)
                        {
                            if (Model.lists.Count != 0)
                            {
                                <div class="dataTable_wrapper">
                                    <table class="table table-striped table-bordered table-hover" id="dataTables-list">
                                        <thead>
                                            <tr>
                                                <th>List Name</th>
                                                <th>Created Date</th>
                                                <th>No Of Subscribers to list</th>
                                                <th>Manage</th>
                                            </tr>
                                        </thead>
                                        <tbody>


                                            @foreach (var item in Model.lists)
                                            {

                                                <tr class="odd gradeX">
                                                    <td>@Html.DisplayFor(model => item.ListName)</td>
                                                    @*<td>@Html.DisplayFor(model=>item.CreatedDate.Value.Date.ToString("MM / dd / yyyy")) </td>*@
                                                    <td>
                                                        @if (item.CreatedDate != null)
                                                        {
                                                            @Html.Encode(string.Format("{0:D}", item.CreatedDate))
                                                        }
                                                    </td>
                                                    <td style="align-content:center">@Html.DisplayFor(model => model.NoOfSubscribers[i])</td>
                                                    <td class="center">
                                                        <div class="pull-right">
                                                            <div class="btn-group">
                                                                <button aria-expanded="false" type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
                                                                    Actions
                                                                    <span class="caret"></span>
                                                                </button>
                                                                <ul class="dropdown-menu pull-right" role="menu">
                                                                    <li>
                                                                        @*<a href="Add-subscriber.html">Add a Subscriber</a>*@
                                                                        @Html.ActionLink("Add a Subscriber", "AddSubcriber", "Subscriber", new { id = item.ListID }, null)
                                                                    </li>
                                                                    <li>
                                                                        @*<a href="list-import.html">import Subscribers</a>*@
                                                                        @Html.ActionLink("Import Subscriber", "ImportSubcriber", "Subscriber", new { id = item.ListID }, null)
                                                                    </li>
                                                                    <li>
                                                                        @*<a href="list-import.html">import Subscribers</a>*@
                                                                        @Html.ActionLink("View Subscribers", "ViewSubscribers", "Subscriber", new { id = item.ListID }, null)
                                                                    </li>
                                                                    <li>
                                                                        @*<a href="list-import.html">import Subscribers</a>*@
                                                                        @Html.ActionLink("Edit List", "EditList", new { id = item.ListID })
                                                                    </li>
                                                                    <li>
                                                                        @*<a href="list-import.html">import Subscribers</a>*@
                                                                        @Html.ActionLink("View UnSubscribers", "Unsubscribers", "Subscriber", new { id = item.ListID }, null)
                                                                    </li>
                                                                </ul>
                                                            </div>
                                                        </div>
                                                    </td>
                                                </tr>

                                                i += 1;
                                            }


                                        </tbody>
                                    </table>
                                </div>
                            }
                            else {
                                <p style="float:inherit">Start by Creating List  @Html.ActionLink("New List", "NewList", "List")</p>
                            }


                        }

                        <!-- /.table-responsive -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
    </div>


</body>
<script type="text/javascript">
    $(function () {
        $('#dataTables-example').DataTable({
           // responsive: true,
            "columnDefs": [{ "orderable": false, "targets": [4] }]

        });
    });

</script>
