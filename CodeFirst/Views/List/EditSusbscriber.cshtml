@model CodeFirst.Models.Subscriber

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-10">
            <h1 class="page-header">Add a subscriber</h1>
        </div>
        <div class="col-lg-2">
            @Html.ActionLink("List", "Index", "List", new { @class = "btn btn-sm btn-primary" })
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">        </div>
                @Html.ValidationMessage("idnull", new { @class = "text-danger" })
                @Html.ValidationMessage("modelnull", new { @class = "text-danger" })
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            @using (Html.BeginForm("EditSusbscriber", "List", FormMethod.Post))
                            {
                                @*@Html.HiddenFor(Model.ListID)*@
                                @Html.HiddenFor(model => model.ListID)
                                @Html.HiddenFor(model => model.SubscriberID)
                                @Html.ValidationMessage("emailerror", new { @class = "text-danger" })
                                @*<form role="form">*@
                            if (ViewBag.ListName != null)
                            {
                                <div class="form-group" style="width:200px">
                                    <label>Select List</label>
                                    @Html.DropDownListFor(model => model.ListID, (SelectList)ViewBag.ListName, "Select List", new { @class = "form-control", @id = "ddladdSub" })
                                </div>
                            }
                            <div class="form-group">
                                <label>First Name</label>
                                @*<input class="form-control" required>*@
                                @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                            <div class="form-group">
                                <label>Last Name</label>
                                @*<input class="form-control" required>*@
                                @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                                <div class="form-group">
                                    <label>Email Address</label>
                                    @*<input class="form-control" required>*@
                                    @Html.EditorFor(model => model.EmailAddress, new { htmlAttributes = new { @class = "form-control" } })
                                </div>
                                <button type="submit" class="btn btn-primary">Subscribe</button>
                                @*@Html.ActionLink("Subscribe", "AddSubcriber","List", new { @class = "btn btn-default" })*@
                                @*<button type="reset" class="btn btn-default">Cancel</button>*@
                                @Html.ActionLink("Cancel", "ViewSubscribers", "List", new { id=Model.ListID}, new { @class = "btn btn-default" })
                                @*</form>*@
                            }
                        </div>
                        <!-- /.col-lg-6 (nested) -->
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>
<!-- /#page-wrapper -->
<!-- jQuery -->
<script src="~/Content/bower_components/jquery/dist/jquery.min.js"></script>
<!-- Bootstrap Core JavaScript -->
<script src="~/Content/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
<!-- Metis Menu Plugin JavaScript -->
<script src="~/Content/bower_components/metisMenu/dist/metisMenu.min.js"></script>
<!-- Custom Theme JavaScript -->
<script src="~/Content/dist/js/sb-admin-2.js"></script>
<script type="text/javascript">
    $(function () {
        $("#ddladdSub").change(function () {
            debugger;
            $.ajax({
                url: '/AddSubcriber/'
            })
        })
    })
</script>